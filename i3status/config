# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        output_format = "i3bar"

}

order += "volume master"
order += "load"
order += "disk /"
order += "memory"
order += "battery 0"
order += "tztime local"

# –æ—Ç—Å–ª–µ–∂–∏–≤–∞–µ–º—ã–π –Ω–∞–∫–æ–ø–∏—Ç–µ–ª—å
disk "/" {
    # –¥–æ—Å—Ç—É–ø–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ:
    # %used, %percentage_used - –∑–∞–Ω—è—Ç–æ–µ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–æ
    # %free, %percentage_free - —Å–≤–æ–±–æ–¥–Ω–æ–µ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–æ
    # %avail, %percentage_avail - –¥–æ—Å—Ç—É–ø–Ω–æ–µ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–æ
    # %total - –≤—Å–µ–≥–æ
    format = "HARD DISK AVAILABLE: %avail"
}    

load {
    format = "%1min"
}

#memory {
#    format = "Ôî∏ MEMORY USED: %used  MEMORY FREE: %free"
#    threshold_degraded = "1G"
#    threshold_critical = "200M"
#    format_degraded = "MEMORY < %available"
#}

tztime local {
    format = "%A %d %b %H:%M:%S"
}

volume master {
    format = "Volume: %volume"
    format_muted = "%volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

battery 0 {
        format = "%status%percentage %remaining" 
        format_down = "No battery"
        status_chr = "‚ö°"
        status_bat = "üîã"
        status_unk = "?"
        status_full = "‚òª"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

